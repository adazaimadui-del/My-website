<div id="supportButton" title="Customer Support">&#10067;</div>
<div id="supportPopup">
  <h4>Customer Support</h4>
  <p>Email: <a href="mailto:Danielgreat121@gmail.com">Danielgreat121@gmail.com</a></p>
  <p>WhatsApp: <a href="https://wa.me/2347070248050" target="_blank">+2347070248050</a></p>
</div>

<script>
  const signInSection = document.getElementById('signInSection');
  const userDetailsSection = document.getElementById('userDetailsSection');
  const waitingSection = document.getElementById('waitingSection');
  const rewardSection = document.getElementById('rewardSection');
  const personalNotification = document.getElementById('personalNotification');
  const withdrawButton = document.getElementById('withdrawButton');
  const withdrawMessage = document.getElementById('withdrawMessage');
  const supportButton = document.getElementById('supportButton');
  const supportPopup = document.getElementById('supportPopup');

  let userEmail = '';
  let userName = '';

  // Sign In Form Submit
  document.getElementById('signInForm').addEventListener('submit', e => {
    e.preventDefault();
    userEmail = document.getElementById('emailInput').value.trim();
    if (userEmail) {
      signInSection.classList.add('hidden');
      userDetailsSection.classList.remove('hidden');
    }
  });

  // User Details Form Submit
  document.getElementById('userDetailsForm').addEventListener('submit', e => {
    e.preventDefault();
    const nameInput = document.getElementById('nameInput').value.trim();
    const dobInput = document.getElementById('dobInput').value;
    const genderSelect = document.getElementById('genderSelect').value;
    const countryInput = document.getElementById('countryInput').value.trim();
    const photoInput = document.getElementById('photoInput').files[0];

    if (!nameInput || !dobInput || !genderSelect || !countryInput || !photoInput) {
      alert('Please fill in all fields and upload a photo.');
      return;
    }

    userName = nameInput;

    userDetailsSection.classList.add('hidden');
    waitingSection.classList.remove('hidden');

    // Wait 3-5 minutes (simulate with shorter time for demo: 10 seconds)
    // For real demo, change 10000 to 180000-300000 ms
    setTimeout(() => {
      waitingSection.classList.add('hidden');
      rewardSection.classList.remove('hidden');
      personalNotification.textContent = `Dear ${userName}, your reward has been credited! A confirmation email has been sent to ${userEmail}.`;
      alert(`Simulated email sent to ${userEmail} with your $10,000 reward!`);
    }, 10000);
  });

  // Withdraw Button Click
  withdrawButton.addEventListener('click', () => {
    withdrawMessage.classList.remove('hidden');
    withdrawMessage.textContent = 'To activate your account and withdraw your reward, please contact customer support.';
  });

  // Support Button Toggle Popup
  supportButton.addEventListener('click', () => {
    if (supportPopup.style.display === 'block') {
      supportPopup.style.display = 'none';
    } else {
      supportPopup.style.display = 'block';
    }
  });

  // Close support popup if clicking outside
  document.addEventListener('click', (e) => {
    if (!supportPopup.contains(e.target) && e.target !== supportButton) {
      supportPopup.style.display = 'none';
    }
  });
</script>

</body>
